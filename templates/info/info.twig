{% extends 'base.html.twig' %}

{% block title %} CONTACT US {% endblock %}
{% block css %}
    <link rel="stylesheet" href="{{ asset('css/panier.css') }}">
{% endblock %}
{% block main %}
    <section class="mt-5 panier">
        <div class="container">
            {{ form_start(form) }}
            <h1> DEMANDE DE CONTACT</h1>
            <div class="row">
                <div class="col-sm-6"> {{ form_row(form.Email,{attr: {placeholder: 'adresse Email'} }) }}</div>

                <div class="col-sm-6"> {{ form_row(form.Objet, {
                        label: 'Objet de la Demande',
                        attr: {placeholder: 'Objet'}
                    }) }}</div>
            </div>
            <div class="row">
                <div class="col-sm-12"> {{ form_row(form.Message, {
                        label: 'Message',
                        attr: {placeholder: 'Write Here !'}
                    }) }}</div>

                <button type="submit" class="btn btn-primary" style="text-align: center">ENVOYER</button>
                {{ form_end(form) }}
            </div>
        </div>
    </section>
{% endblock %}