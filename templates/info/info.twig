{% extends 'base.html.twig' %}

{% block title %} CONTACT US {% endblock %}
{% block main %}
    <section class="mt-5 contact">
        <div class="container">
            {{ form_start(form) }}
            <h1> DEMANDE DE CONTACT</h1>
            <div class="row">
                <div class="col-sm-6"> {{ form_row(form.Email) }}</div>

                <div class="col-sm-6"> {{ form_row(form.Objet, {
                        label: 'Objet'}) }}</div>
            </div>
            <div class="row">
                <div class="col-sm-12"> {{ form_row(form.Message, {
                        label: 'Message'
                    }) }}</div>

                <button type="submit" class="btn btn-primary" style="text-align: center">ENVOYER</button>
                {{ form_end(form) }}
            </div>
        </div>
    </section>
{% endblock %}