{% extends 'profil/index.html.twig' %}

{% block content %}
        {{ form_start(form) }}
        <h3>Informations personnelle</h3>
        <div class="row">
            <div class="col-sm-6">{{ form_row(form.nom, {
                    label: 'Nom'
                }) }}</div>
            <div class="col-sm-6">  {{ form_row(form.prenom, {
                    label: 'Prenom'
                }) }} </div>
        </div>
        <div class="row">
            <div class="col-sm-6"> {{ form_row(form.email) }}</div>
        </div>

        <h3>Coordonnées de Livraison</h3>

        <div class="row">

            <div class="col-sm-4"> {{ form_row(form.ville, {
                    label: 'Ville'
                }) }}</div>

        <button type="submit" class="btn btn-primary w-100 mb-4" style="text-align: center"> MODIFIÉ </button>
        {{ form_end(form) }}
{% endblock %}