{% extends 'base.html.twig' %}

{% block main %}
    {% for msg in app.flashes('add') %}
        <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
            <strong> Felicitation ! {{ msg }} </strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center" style="background-color: white; border-radius: 30px">
            {% if details.image is null %}
            <div class="col-md-6">
                <img class="card-img-top mb-5 mb-md-0" src="https://dummyimage.com/600x700/dee2e6/6c757d.jpg" alt="..." />
            </div>
            {% else %}
                <div class="col-md-6">
                    <img class="card-img-top mb-5 mb-md-0" src="{{ asset('images/' ~ details.image) }}" alt="{{ details.name }}" />
                </div>
            {% endif %}
            <div class="col-md-6">
                <h1 class="display-5 fw-bolder"> {{ details.name}} </h1>
                <div class="fs-5 mb-5">
                    <span>{{ details.price }} â‚¬ </span>
                </div>
                <p class="lead">{{ details.description }}</p>
                <div class="d-flex">
                    <a href="{{ path('panier_add',{ id : details.id, origin : app.request.attributes.get('_route') } ) }}" class="btn btn-outline-dark flex-shrink-0" type="button">
                        <i class="bi-cart-fill me-1"></i>
                        Ajouter au panier
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}